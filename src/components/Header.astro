---
import HeaderLink from "./HeaderLink.astro";
---

<header class="flex justify-between items-center my-8">
  <img
    alt="itspatricku logo"
    class="h-16 hidden md:block"
    src="/assets/images/itspatricku-logo-full-colour-navy.svg"
  />
  <img
    alt="itspatricku logo"
    class="h-12 block md:hidden"
    src="/assets/images/itspatricku-symbol-full-colour-navy.svg"
  />

  <div class="text-xs flex items-center gap-4">
    <HeaderLink
      href="/"
      class="text-sm font-medium transition text-gray-900 hover:text-brand-red"
    >
      About
    </HeaderLink>
    <HeaderLink
      href="/blog"
      class="text-sm font-medium transition text-gray-900 hover:text-brand-red"
    >
      Blog
    </HeaderLink>
    <HeaderLink
      href="https://twitter.com/ItsPatrickU"
      target="_blank"
      class="group items-center text-sm font-medium transition text-gray-900 hover:text-brand-red hidden sm:flex"
    >
      <svg
        viewBox="0 0 24 24"
        aria-hidden="true"
        class="h-6 w-6 flex-none transition group-hover:fill-brand-red"
        ><path
          d="M20.055 7.983c.011.174.011.347.011.523 0 5.338-3.92 11.494-11.09 11.494v-.003A10.755 10.755 0 0 1 3 18.186c.308.038.618.057.928.058a7.655 7.655 0 0 0 4.841-1.733c-1.668-.032-3.13-1.16-3.642-2.805a3.753 3.753 0 0 0 1.76-.07C5.07 13.256 3.76 11.6 3.76 9.676v-.05a3.77 3.77 0 0 0 1.77.505C3.816 8.945 3.288 6.583 4.322 4.737c1.98 2.524 4.9 4.058 8.034 4.22a4.137 4.137 0 0 1 1.128-3.86A3.807 3.807 0 0 1 19 5.274a7.657 7.657 0 0 0 2.475-.98c-.29.934-.9 1.729-1.713 2.233A7.54 7.54 0 0 0 22 5.89a8.084 8.084 0 0 1-1.945 2.093Z"
        ></path></svg
      ><span class="ml-2 leading-6">Follow</span>
    </HeaderLink>
    <HeaderLink
      href="https://www.linkedin.com/in/itspatricku/"
      target="_blank"
      class="group hidden sm:flex items-center text-sm font-medium transition text-gray-900 hover:text-brand-red"
    >
      <svg
        viewBox="0 0 24 24"
        aria-hidden="true"
        class="h-6 w-6 flex-none transition group-hover:fill-brand-red"
        ><path
          d="M18.335 18.339H15.67v-4.177c0-.996-.02-2.278-1.39-2.278-1.389 0-1.601 1.084-1.601 2.205v4.25h-2.666V9.75h2.56v1.17h.035c.358-.674 1.228-1.387 2.528-1.387 2.7 0 3.2 1.778 3.2 4.091v4.715zM7.003 8.575a1.546 1.546 0 01-1.548-1.549 1.548 1.548 0 111.547 1.549zm1.336 9.764H5.666V9.75H8.34v8.589zM19.67 3H4.329C3.593 3 3 3.58 3 4.297v15.406C3 20.42 3.594 21 4.328 21h15.338C20.4 21 21 20.42 21 19.703V4.297C21 3.58 20.4 3 19.666 3h.003z"
        ></path></svg
      ><span class="ml-2 leading-6">Connect</span>
    </HeaderLink>
  </div>
</header>
